<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
    <package name="basicstruts2" extends="struts-default">
    
	<!-- setup the default-stack exception mapping interceptor 
 		so that any exceptions not caught by this application 
 		will be logged and then handled by the global exception 
 		mapping -->
 		
	<interceptors>
		<interceptor-stack name="appDefault">
	      	 <interceptor-ref name="defaultStack">
	    			<param name="exception.logEnabled">true</param>
	    			<param name="exception.logLevel">ERROR</param>
	 			</interceptor-ref>
	    </interceptor-stack>
	</interceptors>
		
		<default-interceptor-ref name="appDefault" />
		
	<global-results>
		<result name ='securityerror'>securityerror.jsp</result>
		<result name = 'error'>error.jsp</result>
	</global-results>
	<global-exception-mappings>
		<exception-mapping exception = "main.exceptions.SecurityBreachException" result="securityerror"/>
		<exception-mapping exception = "java.lang.Exception" result="error"/>
	</global-exception-mappings>
	

        <action name="index">
            <result>index.jsp</result>
        </action>
		
        <action name="hello" class="main.action.HelloWorldAction" method="execute">
            <result name="success">helloWorld.jsp</result>
        </action>
        
        <action name="register" class="main.action.Register" method="execute">
            <result name="success">thankyou.jsp</result>
            <result name ="input">register.jsp</result>			
		</action>
		
		<action name ="registerInput" class="main.action.Register" method="input" >
            <result name ="input">register.jsp</result>			
    	</action>
    	
    	<action name="edit" class="main.action.EditAction" method="input">
    		<result name ="input">/resources/edit.jsp</result>
    	</action>
    	
    	<action name="save" class="main.action.EditAction" method="execute">
    		<result name ="success">/resources/thankyou.jsp</result>
    	    <result name ="error">/resources/error.jsp</result>
    	    <!--  
    	    when we go for save an input result name , will get us back to 
    	    edit jsp to focused results. but after success doesnot get us to thankyou page
    	    -->
    	    <!-- <result name ="input">/resources/edit.jsp</result> -->
    	    		
    	
    	</action>
    </package>
    
    <package name="wildcardmethodexample" extends="struts-default">
    	<action name="*WildPerson" class="main.action.WildPersonAction" method="{1}">
    		<result name="success">/resources/wildPerson/view.jsp</result>
			<result name="input">/resources/wildPerson/input.jsp</result>
			<allowed-methods>create,edit,saveOrUpdate,delete</allowed-methods>
    	</action>
    	
    	<action name="*WildPerson*" class="main.action.WildPersonAction" method="run{1}This">
			<result name="success">/resources/wildPerson/view.jsp</result>
			<result name="input">/resources/wildPerson/input.jsp</result>
			<allowed-methods>runCreateThis</allowed-methods>
		</action>
    </package>
</struts>